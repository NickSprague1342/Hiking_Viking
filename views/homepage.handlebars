{{! homepage view }}

<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <div class="iris">
            <div class="card transparent z-depth-5"></div>
            <h1 class="header center deep-purple-text text-darken-4 title-text">Welcome to Hiking Viking! </h1>
        </div>
        <br>
        <div class="row center">
            <h5 class="header col s12 light">Trail Valhalla!</h5>
        </div>
        <div class="row center">
            {{! if user is logged in, button to search jobs }}
            {{#if loggedIn}}
            <a href="/jobs" class="btn-large waves-effect waves-light deep-purple darken-1">Search Trails</a>
            {{else}}
            {{! if user is not logged in, button to login }}
            <a href="/jobs" class="btn-large waves-effect waves-light deep-purple darken-1">Search Trails</a>
            <a href="/login" class="btn-large waves-effect waves-light deep-purple darken-1">Login</a>
            {{/if}}
        </div>
        <br /><br />

    </div>
</div>

<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center deep-purple-text"><i class="material-icons">Trail Icon</i></h2>
                    <h5 class="center">Review your favorite trails.</h5>
                    <p class="light"></p>
                </div>
            </div>
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center deep-purple-text"><i class="material-icons">Post a Photo of your Adventure!</i>
                    </h2>
                    <h5 class="center">Post photos of your trail.</h5>
                    <p class="light"></p>
                </div>
            </div>
            <div class="col s12 m4">
                <div class="icon-block">
                    <h2 class="center deep-purple-text"><i class="material-icons">Adventure Awaits!</i></h2>
                    <h5 class="center">Search for Adventures Here!</h5>
                    <p class="light"></p>
                </div>
            </div>
        </div>

    </div>
    <br /><br />
</div>